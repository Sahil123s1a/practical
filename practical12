#include <iostream>
#include <list>
using namespace std;

#define SIZE 10

class HashTable {
    list<pair<int,int>> table[SIZE];
public:
    int hashFunction(int key) {
        return key % SIZE;
    }

    void insert(int key, int value) {
        int idx = hashFunction(key);
        table[idx].push_back({key, value});
        cout << "Inserted (" << key << "," << value << ") at index " << idx << endl;
    }

    void deleteKey(int key) {
        int idx = hashFunction(key);
        for (auto it = table[idx].begin(); it != table[idx].end(); ++it) {
            if (it->first == key) {
                table[idx].erase(it);
                cout << "Deleted key " << key << " from index " << idx << endl;
                return;
            }
        }
        cout << "Key " << key << " not found!\n";
    }

    void display() {
        cout << "Hash Table:\n";
        for (int i = 0; i < SIZE; i++) {
            cout << i << ": ";
            for (auto &p : table[i])
                cout << "(" << p.first << "," << p.second << ") ";
            cout << endl;
        }
    }
};

int main() {
    HashTable ht;
    ht.insert(12,100);
    ht.insert(22,200);
    ht.insert(32,300);
    ht.insert(7,700);

    cout << "\n";
    ht.display();

    cout << "\nDeleting key 22:\n";
    ht.deleteKey(22);

    cout << "\nAfter Deletion:\n";
    ht.display();
}
