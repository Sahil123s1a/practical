undo, redo = [], []
doc = ""

while True:
    ch = input("\n1.Make 2.Undo 3.Redo 4.Show: ")

    if ch == "1":
        change = input("Enter change: ")
        undo.append(doc)
        doc += change
        redo.clear()

    elif ch == "2" and undo:
        redo.append(doc)
        doc = undo.pop()

    elif ch == "3" and redo:
        undo.append(doc)
        doc = redo.pop()

    elif ch == "4":
        print("Doc:", doc)
        
    else :
        print("exit")
        break  
